<%- include ('_layouts/header.ejs') -%>

<div class="row products">
    <h2><%= title %></h2>
    <% products.forEach(function(product){ %>
            <div class="col-xs-12 col-md-4 p">
                <h3><%= product.title %></h3>
                <a class="pa" href="/products/<%= product.category %>/<%= product.slug %>">
                    <img class="pimage" src="/product_images/<%= product.image %>" alt="" width="200" height="200">
                </a>
                <h4><%=currency_symbols[currency_global] %><%= parseFloat(product.price * currency_rates[currency_global]).toFixed(2) %></h4>
                <a class="vd" href="/products/<%= product.category %>/<%= product.slug %>">View Details</a>
            </div>
        <% }); %>
    
</div>

<%- include ('_layouts/footer.ejs') -%>