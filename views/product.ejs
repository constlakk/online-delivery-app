<%- include ('_layouts/header.ejs') -%>

<div class="row">
    
    <h1 class="page-header"><%= product.title %></h1>
    
    <div class="col-xs-12 col-md-5">
        <img class="spi" src="/product_images/<%= product.image %>" alt="" width="200" height="200">
        <br>
    </div>
    <div class="col-xs-12 col-md-7">
        <p><%= product.desc %></p>
        <p><%=currency_symbols[currency_global] %><%= parseFloat(product.price * currency_rates[currency_global]).toFixed(2) %></p>

        <p><a href="/cart/add/<%= product.slug %>">Add to cart</a></p>

    </div>

</div>

<%- include ('_layouts/footer.ejs') -%>